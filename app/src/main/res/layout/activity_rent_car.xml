<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentCar"
    android:background="#FFFFFF"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/carRentImage"
                style="@style/ImageViewStyle"
                android:scaleType="fitCenter"
                android:src="@drawable/bmw_car"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/carRentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="23dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/carRentImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/textView2"
            style="@style/TextViewStyle"
            android:layout_marginTop="16dp"
            android:text="Personal and Contact information" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/line1"
            style="@style/MaterialCardViewStyle">
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editName"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="30"
            app:startIconDrawable="@drawable/person_ic">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Username"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editEmail"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="30"
            app:startIconDrawable="@drawable/email_ic">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Email Address"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPhone"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="10"
            app:startIconDrawable="@drawable/phone_ic">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Phone Number"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/txt2"
            style="@style/TextViewStyle"
            android:text="Rental Details" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/line2"
            style="@style/MaterialCardViewStyle">
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editLicense"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="30"
            app:startIconDrawable="@drawable/zaid_license">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="License Number"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editStartDate"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="30"
            app:startIconDrawable="@drawable/date_ic">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Start Date (Y-M-D)"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editEndDate"
            style="@style/TextInputLayoutStyle"
            app:counterMaxLength="30"
            app:startIconDrawable="@drawable/update_ic">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="End Date (Y-M-D)"
                android:inputType="text"
                android:maxLength="31" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnRentDone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Rent"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />



    </LinearLayout>

</ScrollView>
