<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numOfSeatsText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_bg"
    tools:context=".ManageCar">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/bmw_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/carModelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Model: BMW M2"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carModelYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2015"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: Blue"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCarSeatsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats: 4"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transmissionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmission: Manual"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Price: 50$"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/priceField"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Change rent price..." />

        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Save Changes" />

        <Button
            android:id="@+id/deleteCarButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#CD4242"
            android:backgroundTintMode="src_over"
            android:text="DELETE CAR" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>